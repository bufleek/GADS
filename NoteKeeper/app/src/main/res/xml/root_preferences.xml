<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:allowDividerBelow="true"
        app:title="@string/general_header">

        <EditTextPreference
            app:key="user_display_name"
            app:title="@string/user_display_name_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:inputType="textEmailAddress"
            android:key="user_email_address"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_email_address"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            android:entryValues="@array/pref_values_favorite_social"
            app:entries="@array/pref_entries_favorite_social"
            app:key="user_favorite_social_network"
            app:title="@string/pref_title_user_favorite_social"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>